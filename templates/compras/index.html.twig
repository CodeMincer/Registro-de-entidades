{% extends 'base.html.twig' %}

{% block title %}Compras index{% endblock %}

{% block body %}
    <h1>Compras index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compra in compras %}
            <tr>
                <td>{{ compra.id }}</td>
                <td>
                    <a href="{{ path('app_compras_show', {'id': compra.id}) }}">show</a>
                    <a href="{{ path('app_compras_edit', {'id': compra.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_compras_new') }}">Create new</a>
{% endblock %}
