{% extends 'base.html.twig' %}

{% block title %}Métodos{% endblock %}

{% block body %}
    <h1>Métodos de pago</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ metodo.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ metodo.tipo }}</td>
            </tr>
        </tbody>
    </table>    

    <div class="d-flex">
        <a href="{{ path('app_metodos_edit', {'id': metodo.id}) }}" class="btn btn-primary">Editar</a>
        {{ include('metodos/_delete_form.html.twig') }}
        <a href="{{ path('app_metodos_index') }}" class="btn btn-secondary">Regresar</a>
    </div>
{% endblock %}
