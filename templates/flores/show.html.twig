{% extends 'base.html.twig' %}

{% block title %}Detalle flor{% endblock %}

{% block body %}
    <h1>Detalle de Flor</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flore.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ flore.tipo }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('app_flores_edit', {'id': flore.id}) }}" class="btn btn-primary">Editar</a>
        {{ include('flores/_delete_form.html.twig') }}
        <a href="{{ path('app_flores_index') }}" class="btn btn-secondary">Regresar</a>
    </div>
    <style>
        a.btn.btn-primary {
            margin-right: 15px;
        }
    </style>

{% endblock %}
