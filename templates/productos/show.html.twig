{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    <h1>Productos</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ producto.tipo }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">    
        <a href="{{ path('app_productos_edit', {'id': producto.id}) }}" class="btn btn-primary">Editar</a>
        {{ include('productos/_delete_form.html.twig') }}
        <a href="{{ path('app_productos_index') }}" class="btn btn-secondary">Regresar</a>
    </div>
{% endblock %}
