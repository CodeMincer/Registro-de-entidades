{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    <h1>Productos</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.tipo }}</td>
                <td>{{ producto.precio }}</td>
                <td>
                    <a href="{{ path('app_productos_show', {'id': producto.id}) }}" class="btn btn-primary">Ver</a>
                    <a href="{{ path('app_productos_edit', {'id': producto.id}) }}" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_productos_new') }}" class="btn btn-primary">Agregar</a>
{% endblock %}
